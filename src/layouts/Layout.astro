---
import Aboutme from "../components/Aboutme.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <title>Felipe Arredondo</title>
  </head>

  <body>
    <i class="fas fa-bars" id="nav-bars-icon"></i>
    <div class="mobile-header">
      <nav id="mobile-nav">
        <ul>
          <li>
            <p id="about-nav">About</p>
          </li>
          <li>
            <p id="experience-nav">Experience</p>
          </li>
          <li>
            <p id="work-nav">Work</p>
          </li>
          <li>
            <p id="contact-nav">Contact</p>
          </li>
          <li class="resume-button">
            <a href="/myCV.pdf" target="_blank" rel="noopener noreferrer"
              >Resume</a
            >
          </li>
        </ul>
      </nav>
    </div>
    <header>
      <span>F</span>
      <nav>
        <ul>
          <li>
            <p id="about-nav-item">About</p>
          </li>
          <li>
            <p id="experience-nav">Experience</p>
          </li>
          <li>
            <p id="work-nav">Work</p>
          </li>
          <li>
            <p id="contact-nav">Contact</p>
          </li>
          <li class="resume-button">
            <a href="/myCV.pdf" target="_blank" rel="noopener noreferrer"
              >Resume</a
            >
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <aside class="media-aside">
        <ul>
          <li>
            <a href="https://github.com/FelipeArredond">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-github"
                style="width: 20px"
              >
                <title>GitHub</title>
                <path
                  d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
                ></path>
              </svg>
            </a>
          </li>
          <li>
            <a href="#">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-instagram"
                style="width: 20px"
              >
                <title>Instagram</title>
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                ></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          </li>
          <li>
            <a href="#">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-linkedin"
                style="width: 20px"
              >
                <title>LinkedIn</title>
                <path
                  d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                ></path>
                <rect x="2" y="9" width="4" height="12"></rect>
                <circle cx="4" cy="4" r="2"></circle>
              </svg>
            </a>
          </li>
        </ul>
      </aside>
      <section class="main-content">
        <section class="my-profile" id="my_profile">
          <p>Hello, my name is</p>
          <p class="my-name"><strong class="main-name">Felipe Arredondo</strong></p>
          <p class="my-little-desc">
            <strong>I'm a Software Developer</strong>
          </p>
          <p class="my-complete-desc">
            I’m a software engineer specializing in building (and occasionally
            designing) exceptional digital experiences. Currently, I’m focused
            on building accessible, human-centered products at
            <span id="postobon">Postobon</span> and <span id="steeful"
              >Steeful.</span
            >
          </p>
        </section>
      </section>
      <section class="main-content" id="about-me-content">
        <Aboutme />
      </section>
      <aside class="mail-aside">
        <p>lfarredong@eafit.edu.co</p>
      </aside>
    </main>
    <footer>
      <Footer />
    </footer>
    <script>
      const mobileNav = document.getElementById("mobile-nav");
      const navButton = document.getElementById("nav-bars-icon");

      navButton!.addEventListener("click", () => {
        console.log("click")
        mobileNav!.style.display == "none"
          ? (mobileNav!.style.display = "")
          : (mobileNav!.style.display = "none");
      });

      //Buttons

      const steeful = document.getElementById("steeful");
      const postobon = document.getElementById("postobon");
      const aboutNav = document.getElementById("about-nav-item");

      aboutNav!.addEventListener("click", () => {
        let aboutMeContent = document.getElementById("about-me-content");
        aboutMeContent!.scrollIntoView({ behavior: "smooth", block: "end" });
      });

      steeful!.addEventListener("click", () => {
        window.open("https://www.steeful.com/");
      });

      postobon!.addEventListener("click", () => {
        window.open("https://www.postobon.com/");
      });
    </script>
  </body>
</html>
<style is:global>
  :root {
    --bg-color: #120458;
    --secondary-color: #ff124f;
    --secondary-color-2: #ff00a0;
    --font-mono: "Fira Code", monospace;
    --navy: #0a192f;
    --third-color: #7a04eb;
    --p-color: rgb(165, 163, 163);
  }

  * {
    padding: 0%;
    margin: 0%;
  }

  a {
    text-decoration: none;
    color: var(--secondary-color);
  }

  body {
    background-color: var(--bg-color);
    font-family: var(--font-mono);
  }

  header span {
    cursor: pointer;
  }

  header {
    color: var(--secondary-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20px 40px;
  }

  header nav ul {
    display: flex;
    align-items: center;
    gap: 30px;
    list-style: none;
  }

  header nav ul .resume-button {
    border: solid 1px var(--secondary-color);
    border-radius: 5px;
    padding: 5px;
    cursor: pointer;
    transition: 0.5s;
  }

  header nav ul .resume-button:hover {
    box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px,
      rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px,
      rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
  }

  header nav ul li p {
    padding: 2px;
    cursor: pointer;
  }

  header nav ul li a {
    padding: 2px;
    cursor: pointer;
  }

  header nav ul li p:hover {
    color: var(--secondary-color-2);
  }

  main {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  footer {
    display: flex;
    align-items: baseline;
    justify-content: center;
    margin: 20px 0;
  }

  .media-aside {
    width: 5%;
    height: 100px;
    text-align: center;
    display: flex;
    flex-direction: column;
    position: fixed;
    bottom: 100px;
    left: 0px;
    z-index: 10;
  }

  .media-aside ul {
    list-style: none;
  }

  .media-aside li {
    margin: 0 0 20px 0;
  }

  .media-aside li a {
    color: var(--secondary-color);
    cursor: pointer;
  }

  .media-aside a:hover {
    color: var(--secondary-color-2);
  }

  .main-content {
    width: 60%;
    margin: 120px auto;
  }

  .mail-aside {
    width: 5%;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--secondary-color);
    rotate: 90deg;
    height: 100px;
    position: fixed;
    bottom: 150px;
    left: 95%;
    z-index: 10;
  }

  .mail-aside:hover {
    color: var(--secondary-color-2);
  }

  .my-profile {
    text-align: start;
    margin: 50px 0 0 0;
  }

  .my-profile::first-line {
    color: var(--secondary-color);
  }

  .my-name {
    color: white;
    font-size: clamp(40px, 8vw, 80px);
    margin: 0 0 0 -9px;
  }

  .my-little-desc {
    color: var(--secondary-color);
    font-size: clamp(40px, 8vw, 80px);
    margin: 0 0 0 -9px;
  }

  .my-complete-desc {
    color: rgb(165, 163, 163);
    width: 30%;
  }

  .my-complete-desc span {
    content: " Postobon.";
    color: var(--secondary-color);
    cursor: pointer;
  }

  .my-complete-desc span:hover {
    content: " Postobon.";
    color: var(--secondary-color-2);
  }

  .main-content {
    cursor: default;
  }

  .mobile-header {
    display: none;
  }

  #nav-bars-icon {
    display: none;
  }

  @media only screen and (max-width: 600px) {
    header {
      display: none;
    }
    .main-name {
      font-size: 25px;
    }
    #nav-bars-icon {
      display: block;
    }
    .mobile-header {
      color: var(--secondary-color);
      text-align: center;
      display: block;
    }
    .fa-bars {
      color: var(--secondary-color);
      margin: 10px;
      font-size: 40px;
    }
    .mobile-header nav ul {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 200px;
    }
    .my-profile {
      text-align: left;
    }
    .my-little-desc{
      font-size: 30px;
    }
    .my-complete-desc {
      text-align: left;
      margin: 10px -10px;
      width: 100%;
    }
    .media-aside {
      margin: 10px;
    }
    .main-content{
      width: 75%;
    }
  }
</style>
